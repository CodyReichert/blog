!!! 5
%html
  %head
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    %title
      = "Middleman Blog - #{current_article.title unless current_article.nil?}"

    %link{:type => "text/css", :rel => "stylesheet", :href => "/stylesheets/all.css"}

  %body

    #header
      = partial(:sidebar)

    .row-fluid
      .col-md-9.col-md-offset-3
        #contentupper
          = partial(:contentupper)

    .row-fluid
      .col-md-9.col-md-offset-3.content
        %h1
          %a= link_to(current_page.data.title, current_page.data.path)
          %small= current_page.data.date.strftime('%b %e, \'%y')
        #content-area
          = yield

    %script(src="/javascripts/all.js")
